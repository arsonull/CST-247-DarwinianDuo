@{
    ViewData["Title"] = "index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

@model GameBoard

<style>
    .game-button {
        width: 75px;
    }

    .game-button-image {
        width: 50px;
    }

    .button-zone {
        display: flex;
        flex-wrap: wrap;
    }

    .line-break {
        flex-basis: 100%;
        height: 0;
    }

    .button-label {
        font-size: 8px;
        text-align: center;
    }
</style>

<div>
    @{
        Html.RenderPartial("~/Views/Shared/_ViewMinesweeper.cshtml");
    }
</div>

<form>
    <div class="button-zone">
        @for (int row = 0; row < Model.Size; row++)
        {
            /* start a new line every five elements
            if (bttn % 5 == 0)
            {
                <div class="line-break"></div>
            }*/
            for (int col = 0; col < Model.Size; col++)
            {
                <button class="game-button" type="submit" value="@Model.grid[row,col].id" name="buttonNumber" asp-controller="Button">
                    @if (Model.grid[row, col].visited)
                    {
                        <div class="button-label">@Model.grid[row, col].liveNeighbours</div>
                    }
                </button>
            }
            <div class="line-break"></div>
        }
    </div>
    <div class="button-zone">
        @ViewBag.isDone
    </div>
</form>