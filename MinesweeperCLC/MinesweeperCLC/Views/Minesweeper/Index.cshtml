@{
    ViewData["Title"] = "index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

@model IEnumerable<ButtonModel>

<style>
    .game-button { width: 75px; }
    .game-button-image { width: 50px; }
    .button-zone{
        display: flex;
        flex-wrap: wrap;
    }
    .line-break{
        flex-basis: 100%;
        height: 0;
    }
    .button-label{
        font-size: 8px;
        text-align: center;
    }
</style> 

<div>
    @{ 
        Html.RenderPartial("~/Views/Shared/_ViewMinesweeper.cshtml");
    }
</div>

<form>
    <div class="button-zone">
        @for (int bttn = 0; bttn < Model.Count(); bttn++)
        {
            // start a new line every five elements
            if (bttn % 5 == 0)
            {
                <div class="line-break"></div>
            }

            <button class="game-button" type="submit" value="@Model.ElementAt(bttn).id"
                     name="buttonNumber" asp-controller="Button">
                @if (Model.ElementAt(bttn).visited)
                {
                    <div class="button-label">@Model.ElementAt(bttn).liveNeighbours;</div>
                }
            </button>
        }
    </div>
    <div class="button-zone">
        @ViewBag.isDone
    </div>
</form>